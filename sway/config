set $bg #000000
set $fg #E6E6E6
set $black #000000
set $red #FF4C4C
set $green #33FF99
set $yellow #FFD93D
set $blue #339CFF
set $magenta #C873FF
set $cyan #33FFF0
set $white #E6E6E6
set $bright_black #4D4D4D
set $bright_red #FF6666
set $bright_green #66FFB2
set $bright_yellow #FFE866
set $bright_blue #66B3FF
set $bright_magenta #D78BFF
set $bright_cyan #66FFF5
set $bright_white #FFFFFF
set $primary #FF4C4C
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty --config-file /home/pj/.dotfiles/alacritty/main.toml
set $menu launcher
set $wallpaper ~/.dotfiles/backgrounds/orange-amoled.jpg

gaps outer 1
gaps inner 8
default_border pixel 1

input "type:keyboard" {
    xkb_layout br
    xkb_variant abnt2
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

exec swayidle -w \
	timeout 150 "lock $wallpaper"\
	timeout 300 'swaymsg "output * dpms off"; loginctl suspend' resume 'swaymsg "output * dpms on"'\
	before-sleep "lock $wallpaper"\

bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+e exec $term -e ranger
bindsym $mod+d exec $menu
bindsym $mod+Shift+c reload
bindsym F12 exec lock $wallpaper
bindsym $mod+Shift+q exec swaymsg exit
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Control+$left resize shrink width 50px
bindsym $mod+Control+$right resize grow width 50px
bindsym $mod+Control+$up resize grow height 50px
bindsym $mod+Control+$down resize shrink height 50px
bindsym $mod+Control+Left resize grow width 50px
bindsym $mod+Control+Right resize shrink width 50px
bindsym $mod+Control+Up resize grow height 50px
bindsym $mod+Control+Down resize shrink height 50px
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+t layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_SINK@ 5%+ && updatebar
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_SINK@ 5%- && updatebar
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle && updatebar
bindsym F8 exec pactl set-source-volume @DEFAULT_SOURCE@ +5% && updatebar
bindsym F7 exec pactl set-source-volume @DEFAULT_SOURCE@ -5% && updatebar
bindsym F6 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && updatebar
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && updatebar
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+ && updatebar
bindsym Print exec screenshot

output DP-1 mode 2560x1440@99.999Hz position 0 0
output HDMI-A-1 mode 1920x1080@60Hz position 2560 0
output * bg $wallpaper fill

client.focused              $primary $black $fg $primary $primary
client.focused_inactive     $bright_black $black $fg $bright_black $bright_black
client.unfocused            $black $black $fg $black $black
client.urgent               $red $black $fg $red $red
client.placeholder           $black $black $fg $black $black
bar {
	font "Fira Code 10"
	height 16
    position top
	status_command ~/.dotfiles/bar/bar
    colors {
        statusline $fg
		background $bg
		focused_workspace $black $primary $fg
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}
exec dbus-update-activation-environment DISPLAY SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
include /etc/sway/config.d/*
